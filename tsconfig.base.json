{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@muse": ["apps/muse/src"],
			"@muse/*": ["apps/muse/src/*"],
			"@muse/settings": ["apps/muse/src/modules/settings"],
			"@music": ["libs/music/src/index.ts"],
			"@music/*": ["libs/music/src/lib/*"],
			"@prisma": ["libs/prisma/src/index.ts"],
			"@prisma/*": ["libs/prisma/src/lib/*"],
			"@radio": ["apps/radio/src"],
			"@radio/*": ["apps/radio/src/*"],
			"@musicv2/*": ["apps/music/src/*"],
			"@sdk": ["libs/sdk/src/index.ts"],
			"@sdk/*": ["libs/sdk/src/lib/*"],
			"@util": ["libs/util/src/index.ts"],
			"@util/*": ["libs/util/src/lib/*"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
