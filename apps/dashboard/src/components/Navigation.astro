---
import { Image } from '@astrojs/image/components';
import { CgMenuRight } from 'react-icons/cg';
import logoImage from '../assets/images/logo.png';

const INVITE_LINK = import.meta.env.PUBLIC_INVITE_LINK;
---

<div class="navbar sticky top-0 px-0">
	<div class="flex-1 lg:flex-none gap-4">
		<a href="/" class="mr-6">
			<Image src={logoImage} width={64} height={64} alt="Muse logo" />
		</a>
		<a
			href={INVITE_LINK}
			class="hidden md:block link text-white"
			target="_INVITE"
		>
			Add to server
		</a>
	</div>
	<div class="flex flex-1 justify-end items-center">
		<div class="flex md:hidden gap-4 items-center">
			<div class="dropdown dropdown-end">
				<label
					tabindex="0"
					class="btn btn-ghost p-1 text-2xl aspect-square"
				>
					<CgMenuRight />
				</label>
				<ul
					tabindex="0"
					class="menu dropdown-content p-2 shadow bg-neutral rounded-box w-52 mt-2"
				>
					<li>
						<a href={INVITE_LINK} target="_INVITE">
							Add to server
						</a>
					</li>
					<li><a class="text-primary">Sign in</a></li>
					<!-- <li><a class="text-error">Sign out</a></li> -->
				</ul>
			</div>
		</div>
		<div class="hidden md:flex gap-4 items-center">
			<a class="btn btn-primary rounded-full">Sign in</a>
